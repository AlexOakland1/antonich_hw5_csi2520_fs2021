            <article>
                <div>
                    <p>When was the Atari 2600 released?</p>
                    <form>
                        <input type="radio" id="correct" name="atari1" value="correct">
                        <label for="correct">1977</label><br>
                        <input type="radio" id="css" name="atari2" value="1980">
                        <label for="css">1980</label><br>
                        <input type="radio" id="javascript" name="atari3" value="1536">
                        <label for="javascript">In 1536 and it was powered by steam</label>
                        <br>
                        <input type="button" action="/updatescore" value="Click Me!">
                    </form>

                    <form
                        class="form-inline mb-3"
                        action="/updatescore"
                        method="post"
                        id="CRUDupdate"
                    >
                    <label for="studentEmail">Student Email: </label>
                    <input
                        type="text"
                        name="studentEmail"
                        placeholder="Enter your Email"
                        size="200"
                        required
                        autocomplete="off"
                        class="form-control mr-2"
                    />
                        <input type="submit" value="SUBMIT" class="btn btn-dark" />
                    </form>
                </div>
                <p><%=score%></p>
            </article>

